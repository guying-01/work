#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../._ngmshell@0.1.1@ngmshell/bin/ngmshell.js" "$@"
  ret=$?
else 
  node  "$basedir/../._ngmshell@0.1.1@ngmshell/bin/ngmshell.js" "$@"
  ret=$?
fi
exit $ret
