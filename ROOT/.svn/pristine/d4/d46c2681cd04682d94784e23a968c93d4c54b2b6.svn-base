/*活动页面秒杀开始*/
.banner{
    width: 100%;
    height:3rem;
    background: url("../img/seckill/banner.jpg") no-repeat center center;
    background-size: cover;
}
.container{
    width: 100%;
    background: #fff;
    overflow: hidden;
    padding: 0 0.2rem;
    height: auto;
    box-sizing: border-box;
}
.container .smallBox{
    padding: 0 0.1rem;
    width: 50%;
    box-sizing: border-box;
    height: auto;
    float: left;
    padding-bottom: 0.3rem;
}
.smallBox img{
    display: block;
    height: 2.3rem;
    width: 2.6rem;
    margin: 0.2rem auto 0;

}
.smallBox .goodsName{
    color: #000;
    font-weight: 700;
    font-size: 0.25rem;
    text-indent: 0.2rem;
    max-height: 0.6rem;
    overflow: hidden;
}
.costPrice{
    color: #898989;
    font-weight: 600;
    margin-top: 0.05rem;
}
.price{
    color: #d33127;
    font-weight: 600;
}
.price .btn{
    float: right;
    color: #fff;
    background: #d01202;
    padding: 0 0.1rem;
    box-sizing: border-box;
}
.price span{
    padding-left: 0.1rem;
}
.num{
    color:#898989;
    font-weight: 600;

}
.num span:nth-of-type(2){
    float: right;
}
/*活动页面秒杀结束*/