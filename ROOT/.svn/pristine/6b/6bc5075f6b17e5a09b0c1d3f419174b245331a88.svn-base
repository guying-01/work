var params = {};

Handlebars.registerHelper({
    deliverTime: function (day,time) {
        var result = "";
        if (time) {
            time = time.split(":")[0]
        }
        else {                           //备货时间不存在，默认早10
            result = "/resources/basepage/store/default/common_img/deliver_time_01.png";
        }
        if ("2" == day) {
            if (time < 12) {
                result = "/resources/basepage/store/default/common_img/deliver_time_01.png";
            } else {
                result = "/resources/basepage/store/default/common_img/deliver_time_02.png";
            }
        } else if ("3" == day) {
            result = "/resources/basepage/store/default/common_img/deliver_time_03.png";
        }
        return result;
    },
    promotion_name: function (type) {
        var result = "";
        switch(type){
            case "01":
                result += "秒杀";
                break;
            case "02":
                result += "巨便宜";
                break;
            case "03":
                result += "免费试吃";
                break;
            case "04":
                result += "打折";
                break;
            case "05":
                result += "清仓甩卖";
                break;
            case "06":
                result += "疯抢晚八点";
                break;
        }
        return result;
    },
    promotion_pic: function (type) {
        var result = "-0px 0px";
        switch(type){
            case "01":
                result = "-31px 0px";
                break;
            case "02":
                result = "-61px 0px";
                break;
            case "03":
                result = "-91px 0px";
                break;
            case "04":
                result = "-121px 0px";
                break;
            case "05":
                result = "-151px 0px";
                break;
            case "06":
                result = "-181px 0px";
                break;
        }
        return result;
    }
});


