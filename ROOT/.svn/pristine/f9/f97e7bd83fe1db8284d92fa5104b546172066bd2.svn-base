.banner {
  width: 100%;
  height: 2.5rem;
}
.banner  .title {
  height: 2.5rem;
  width: 100%;
  background: url('../img/notify_list/bigNews.jpg') no-repeat top center;
  background-size: 100%;
}
.banner .time {
  height: 0.5rem;
  line-height: 0.5rem;
  background: #fbc21b;
  margin-top: -0.03rem;
}
.banner .time span {
  float: right;
  margin-right: 1.1rem;
}

.banner .time strong {
  font-size: 0.24rem;
  font-weight: bold;
  margin-left: 0.9rem;
}
.banner .time p {
  width: 2.4rem;;
  display: inline-block;
  margin-left: 0.1rem;
}
.banner .time #minute {
  display: inline-block;
  padding: 0 0.04rem;
}
.banner .time #second {
  display: inline-block;
  padding: 0 0.04rem;
}
.goodsList {
  overflow: hidden;
  padding-bottom: 0.4rem;
}
.goodsList ul {
  padding-left: 0.2rem;
  margin-top: 0.2rem;
}
.goodsList ul li {
  line-height: 0.52rem;
  font-size: 0.25rem;
  border-bottom: 1px solid #ccc;
  width: 6rem;
}
.goodsList ul li i {
  display: inline-block;
  width: 0.3rem;
  height: 0.3rem;
  background:  url('../img/notify_list/radio.png') no-repeat center center;
  background-size: contain;
  vertical-align: middle;
  margin-right: 0.1rem;
  float: left;
  margin-top: 0.12rem;
}
.goodsList ul li .time{
 float: right;
}
.goodsList ul li a{
	display: block;
}
.goodsList ul li a:after{
	content: '.';
	clear: both;
	visibility: hidden;
	height: 0;
	display: block;
}
.item-tit{
	display: block;
	float: left;
	max-width: 3.9rem;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	color: #000;
}
.goodsList ul li a {
  color: black;
}
.goodsList .eachGood .eachGoodA {
  display: inline-block;
  width: 3rem;
  height: 3.8rem;
  position: absolute;
}
.goodsList .eachGood .goodPic {
  width: 2.52rem;
  height: 2.52rem;
  background: black;
  margin-left: 0.2rem;
  border: 1px solid #666;
}
.goodsList .eachGood .goodPic img {
  width: 100%;
}

.goodsList .eachGood .goodTitle {
  padding: 0.1rem 0.08rem;
  font-weight: bold;
  color: black;
  font-size: 0.25rem;
}
.goodsList .eachGood .goodTip {
  display: block;
  padding-left: 0.09rem;
  line-height: 0.3rem;
  color: red;
  font-size: 0.23rem;
  font-weight: bold;
}
.goodsList .eachGood .oldPrice {
  color: #898989;
  display: block;
  line-height: 0.4rem;
  padding-left: 0.09rem;
}
.goodsList .eachGood .oldPrice em {
  text-decoration: line-through;
  padding-left: 0.1rem;
}
.goodsList .eachGood .nowPrice {
  padding-left: 0.09rem;
  color: red;
  font-weight: bold;
}
.goodsList .eachGood .nowPrice em {
  font-style: normal;
}
.goodsList .eachGood .nowPrice  a {
  display: inline-block;
  background: #d01202;
  color: white;
  text-align: center;
  line-height: 0.3rem;
  width: 0.9rem;
  margin-left: 0.15rem;
}
