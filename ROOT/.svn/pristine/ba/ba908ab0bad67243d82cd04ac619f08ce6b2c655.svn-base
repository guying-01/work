/*天上掉馅饼开始*/
*{
    box-sizing: border-box;
    position: relative;
}
.banner{
    width: 100%;
    height:3rem;
    background: url("../img/pie/banner.jpg") no-repeat center center;
    background-size: cover;
}
.container-gy{
    background: #fd8222;
    color: #fff;
    overflow: hidden;
    padding: 0 0.1rem;
}
.container-gy .time{
    width: 100%;
    padding-top: 0.1rem;
    text-align: center;
    color: #fff;
    font-size: 0.3rem;
    letter-spacing: 0.05rem;
}
.container-gy .title{
    width: 100%;
    padding: 0.1rem 0;
    text-align: center;
    color: #fff;
    font-size: 0.27rem;
    letter-spacing: 0.05rem;

}
.rangeAds{
    overflow: hidden;
}
.everyAds{
    width: 48%;
    float: left;
    margin-left: 1%;
    margin-right: 1%;
    padding: 0.1rem;
    background: #fff;
    color: #000;
    margin-bottom: 0.2rem;
}
.everyAds .itemPic{
    width: 100%;
    height: 2.7rem;
}
.everyAds .itemPic img{
    width: 100%;
    height: 100%;
}
.itemName,.itemDescription{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.itemPrice span{
    color: red;
}
.wrap{
    overflow: hidden;
}
.wrap .itemPrice{
    width: 60%;
    float: left;
    overflow: hidden;
    white-space: nowrap;
}
.wrap .buy{
    padding: 0.02rem;
    background: #ee0000;
    color: #fff;
    border-radius: 0.05rem;
    width: 40%;
    font-size: 0.23rem;
    text-align: center;
    float: right;
}
.everyAds a{
    position: absolute;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
}
/*天上掉馅饼结束*/