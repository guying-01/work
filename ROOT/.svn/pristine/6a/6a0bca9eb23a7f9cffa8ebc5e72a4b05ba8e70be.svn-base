/*天上掉馅饼开始*/
*{
    box-sizing: border-box;
    position: relative;
}
.banner{
    width: 100%;
    height:3rem;
    background: url("../img/pie/banner.jpg") no-repeat center center;
    background-size: cover;
}
.container-gy{
    background: #fd8222;
    color: #fff;
    overflow: hidden;
    padding: 0 0.1rem;
}
.container-gy .time{
    width: 100%;
    padding-top: 0.1rem;
    text-align: center;
    color: #fff;
    font-size: 0.3rem;
    letter-spacing: 0.05rem;
}
.container-gy .title{
    width: 100%;
    padding: 0.1rem 0;
    text-align: center;
    color: #fff;
    font-size: 0.27rem;
    letter-spacing: 0.05rem;

}
.rangeAds{
    overflow: hidden;
}
.everyAds{
    width: 48%;
    float: left;
    margin-left: 1%;
    margin-right: 1%;
    padding: 0.1rem;
    background: #fff;
    color: #000;
    margin-bottom: 0.2rem;
    height: 4.25rem;
}
.everyAds .itemPic{
    width: 100%;
    height: 2.7rem;
}
.everyAds .itemPic img{
    width: 100%;
    height: 100%;
}
.itemName,.itemDescription{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.itemPrice span{
    color: red;
}
.wrap{
    overflow: hidden;
}
.wrap .itemPrice{
    width: 60%;
    float: left;
    overflow: hidden;
    white-space: nowrap;
}
.wrap .buy{
    padding: 0.02rem;
    background: #ee0000;
    color: #fff;
    border-radius: 0.05rem;
    width: 40%;
    font-size: 0.23rem;
    text-align: center;
    float: right;
}
.everyAds a{
    position: absolute;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.titleSelect{
    width: 100%;
    border-bottom: 0.05rem solid #fff;
    overflow: hidden;
}
.titleSelect span{
    width: 50%;
    box-sizing: border-box;
    font-size: 0.3rem;
    text-align: center;
    padding: 0.1rem 0;
    float: left;
}
.winningBox{
    overflow: hidden;
    padding-bottom: 0.1rem;
    border-bottom: 1px solid #fff;
}
.winningGoods,.winningStore{
    width: 49%;
    box-sizing: border-box;
    height: 4.25rem;
    font-size: 0.25rem;
    float: left;
    margin-right: 1%;
}
.winningStore li{
    text-align: center;
    padding: 0.05rem;
    box-sizing: border-box;
    border-bottom: 1px solid #fff;
}
.showMore .iconMore{
    height: 100%;
    width: 20%;
    float: left;
    background:#fff url("../img/pie/pie-click.png") no-repeat center center;
    background-size: contain;
}
.showMore{
    height: 0.6rem;
    line-height: 0.6rem;
    margin-top: 0.08rem;
    border: 1px solid #fff;
    border-radius: 0.05rem;
}
.showMore .word{
    width: 80%;
    float: left;
    text-align: center;
}
/*天上掉馅饼结束*/